{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "2.7",

  "default_locale": "en",

  "browser_specific_settings": {
    "gecko": {
      "id": "search_elements_text@utb.dip.jp",
      "strict_min_version": "119.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html"
  },

  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "96": "icon.svg"
  },

  "permissions": [
    "menus",
    "activeTab",
    "scripting",
    "search",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}

